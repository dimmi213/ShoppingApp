<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ececec"
    tools:context=".activity.profile.Menu_ProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">
            <LinearLayout
                android:id="@+id/features"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_border"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintVertical_bias="0.07">

                <LinearLayout
                    android:id="@+id/features_top_order"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="40dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/order_history"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:drawableRight="@drawable/turn_to"
                            android:hint="Xem lịch sử mua hàng"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:drawableLeft="@drawable/purchase"
                            android:hint="  Đơn mua"
                            android:textSize="20sp"
                            android:textStyle="bold"/>
                    </RelativeLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_centerVertical="true"
                    android:background="#1A000000"
                    android:layout_marginTop="30dp" />

                <LinearLayout
                    android:id="@+id/features_order"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/order_waiting_for_pay"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:hint="Chờ thanh toán"
                        android:textAlignment="center"
                        android:layout_marginEnd="10dp"
                        android:drawableTop="@drawable/to_pay"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/order_waiting_for_delivery"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:layout_marginEnd="10dp"
                        android:hint="Chờ vận chuyển"
                        android:textAlignment="center"
                        android:drawableTop="@drawable/to_ship"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/order_delivery"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:hint="Chờ giao hàng"
                        android:layout_marginEnd="20dp"
                        android:textAlignment="center"
                        android:drawableTop="@drawable/to_receive"
                        android:textSize="15sp" />

<!--                    <TextView-->
<!--                        android:id="@+id/order_rate"-->
<!--                        android:layout_width="0dp"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_weight="1"-->
<!--                        android:hint="Đánh giá"-->
<!--                        android:textAlignment="center"-->
<!--                        android:drawableTop="@drawable/to_rate"-->
<!--                        android:textSize="15sp" />-->
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_centerVertical="true"
                    android:background="#1A000000"
                    android:layout_marginTop="20dp" />

                <RelativeLayout
                    android:id="@+id/personal_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:hint="  Hồ sơ cá nhân"
                        android:drawableLeft="@drawable/person"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/turn_to" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_centerVertical="true"
                    android:background="#1A000000"
                    android:layout_marginTop="10dp" />

<!--                <RelativeLayout-->
<!--                    android:id="@+id/settings"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="match_parent"-->
<!--                    android:gravity="center_vertical"-->
<!--                    android:layout_marginTop="30dp"-->
<!--                    android:layout_marginBottom="40dp"-->
<!--                    android:orientation="horizontal">-->

<!--                    <TextView-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="match_parent"-->
<!--                        android:hint="  Cài đặt riêng tư"-->
<!--                        android:drawableLeft="@drawable/settings"-->
<!--                        android:gravity="center"-->
<!--                        android:textSize="20sp"-->
<!--                        android:textStyle="bold"/>-->

<!--                    <ImageView-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="match_parent"-->
<!--                        android:layout_alignParentEnd="true"-->
<!--                        android:layout_alignParentRight="true"-->
<!--                        android:src="@drawable/turn_to" />-->
<!--                </RelativeLayout>-->
            </LinearLayout>
        </FrameLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>