<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.profile.personal_profile.ChangePhoneNumberFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Thay đổi số điện thoại"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nhập số điện thoại mới"
            android:gravity="center"
            android:layout_marginTop="5dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/round_back_dark_blue5_15" >

            <TextView
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:background="@android:color/transparent"
                android:hint="+84-"
                android:gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/new_phone_number"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:textColor="#D3D3D3"
                android:background="@null"
                android:gravity="center"
                android:imeOptions="actionDone"
                android:importantForAutofill="no"
                android:layout_marginEnd="20dp"
                android:textSize="20sp"
                android:inputType="number"
                android:textStyle="bold"/>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/update_phone_number"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:text="Xác nhận"
            android:background="@drawable/round_back_orange_15"
            android:textAllCaps="false"
            android:layout_marginTop="40dp"
            android:textColor="#FFFFFF"/>
    </LinearLayout>
</FrameLayout>