<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ececec"
    tools:context=".activity.ProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/top_background"
                    android:layout_width="410dp"
                    android:layout_height="204dp"
                    android:scaleType="fitXY"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:src="@drawable/top_background"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="-24dp" />

                <ImageView
                    android:id="@+id/profile_image_URL"
                    android:layout_width="166dp"
                    android:layout_height="128dp"
                    android:src="@drawable/profile"
                    app:layout_constraintEnd_toEndOf="@+id/top_background"
                    app:layout_constraintBottom_toBottomOf="@+id/top_background"
                    tools:layout_editor_absoluteY="124dp"
                    app:layout_constraintStart_toStartOf="@+id/top_background"
                    app:layout_constraintTop_toBottomOf="@+id/top_background"
                    android:layout_marginTop="16dp"
                    android:contentDescription="@string/profile_image_description" />

                <TextView
                    android:id="@+id/name_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/profile_image_URL"
                    app:layout_constraintStart_toStartOf="@id/profile_image_URL"
                    app:layout_constraintEnd_toEndOf="@id/profile_image_URL"
                    android:layout_marginTop="16dp" />

                <TextView
                    android:id="@+id/email_bio_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    app:layout_constraintTop_toBottomOf="@id/name_profile"
                    app:layout_constraintStart_toStartOf="@id/name_profile"
                    app:layout_constraintEnd_toEndOf="@id/name_profile" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/email_bio_profile">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/button_my_account"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="32dp"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        style="@android:style/Widget.Button"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/button_background"
                        android:drawableStart="@drawable/personal"
                        android:drawablePadding="20dp"
                        android:paddingStart="20dp"
                        android:text="Tài khoản của tôi"
                        android:textAlignment="viewStart" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/button_my_orders"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="32dp"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        style="@android:style/Widget.Button"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/button_background"
                        android:drawableStart="@drawable/orders"
                        android:drawablePadding="20dp"
                        android:paddingStart="20dp"
                        android:text="Đơn hàng"
                        android:textAlignment="viewStart" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/button_setting"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="32dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/button_background"
                        android:drawableStart="@drawable/settings"
                        android:drawablePadding="20dp"
                        android:paddingStart="20dp"
                        android:text="Cài đặt riêng tư"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        style="@android:style/Widget.Button"
                        android:textAlignment="viewStart" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>