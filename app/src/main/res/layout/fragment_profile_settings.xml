<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ececec"
    tools:context=".activity.profile.Profile_SettingsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/top_background"
                    android:layout_width="410dp"
                    android:layout_height="204dp"
                    android:scaleType="fitXY"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:src="@drawable/top_background"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="-24dp" />

                <ImageView
                    android:id="@+id/image_profile"
                    android:layout_width="166dp"
                    android:layout_height="128dp"
                    android:src="@drawable/profile"
                    app:layout_constraintEnd_toEndOf="@+id/top_background"
                    app:layout_constraintBottom_toBottomOf="@+id/top_background"
                    tools:layout_editor_absoluteY="124dp"
                    app:layout_constraintStart_toStartOf="@+id/top_background"
                    app:layout_constraintTop_toBottomOf="@+id/top_background"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/name_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Linh Dan"
                    android:layout_marginTop="16dp"
                    android:textSize="25sp"
                    android:textStyle="bold"

                    app:layout_constraintEnd_toEndOf="@+id/image_profile"
                    app:layout_constraintStart_toStartOf="@+id/image_profile"
                    app:layout_constraintTop_toBottomOf="@+id/image_profile" />
                <TextView
                    android:id="@+id/email_bio_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="linhdan@gmail.com"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="@+id/name_profile"
                    app:layout_constraintStart_toStartOf="@+id/name_profile"
                    app:layout_constraintTop_toBottomOf="@+id/name_profile" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/email_bio_profile">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/notification_settings"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="32dp"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        style="@android:style/Widget.Button"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/button_background"
                        android:drawableStart="@drawable/notification_settings"
                        android:drawablePadding="20dp"
                        android:paddingStart="20dp"
                        android:text="Cài đặt thông báo"
                        android:textAlignment="viewStart" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/security_settings"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="32dp"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        style="@android:style/Widget.Button"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/button_background"
                        android:drawableStart="@drawable/security_settings"
                        android:drawablePadding="20dp"
                        android:paddingStart="20dp"
                        android:text="Thiết lập riêng tư"
                        android:textAlignment="viewStart" />

                </LinearLayout>

                <FrameLayout
                    android:id="@+id/fragment_profile_settings"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintTop_toBottomOf="@id/email_bio_profile"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>